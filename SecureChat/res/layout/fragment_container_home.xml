
	<RelativeLayout 
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_vertical">
	    
	    <android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">
    
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/contentFragment_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    
    <!-- The navigation drawer -->
    <!-- should not be larger than 320 to show content -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111" />
    
</android.support.v4.widget.DrawerLayout>

	    <ImageView
	        android:id="@+id/iv_left_drawer"
	        android:layout_width="23dp"
	        android:layout_height="23dp"
	        android:layout_alignLeft="@+id/drawer_layout"
	        android:layout_centerVertical="true"
	        android:contentDescription="@string/iv_left_drawer"
	        android:fitsSystemWindows="false"
	        android:gravity="center_vertical"
	        android:maxHeight="23dp"
	        android:maxWidth="23dp"
	        android:scaleType="center"
	        android:src="@drawable/ic_action_next_item" />

</RelativeLayout>